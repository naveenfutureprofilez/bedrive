# Bedrive WeTransfer-like Configuration
APP_NAME="Bedrive Transfer"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://yourdomain.com

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bedrive_transfer
DB_USERNAME=root
DB_PASSWORD=

# Cloudflare R2 Configuration
FILESYSTEM_DRIVER=r2
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_key
CLOUDFLARE_R2_DEFAULT_REGION=auto
CLOUDFLARE_R2_BUCKET=your-bucket-name
CLOUDFLARE_R2_URL=https://your-bucket.your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_USE_PATH_STYLE_ENDPOINT=false

# File Storage Configuration
PRIVATE_UPLOADS_DISK_DRIVER=r2
PUBLIC_UPLOADS_DISK_DRIVER=r2
PRIVATE_UPLOADS_REMOTE_ROOT=uploads
PUBLIC_UPLOADS_REMOTE_ROOT=public

# TUS Configuration (for resumable uploads)
TUS_ENABLED=true
TUS_MAX_SIZE=5368709120
TUS_UPLOAD_PATH=storage/app/tus-uploads
TUS_TTL=86400
CHUNK_SIZE=268435456
UPLOAD_TIMEOUT=300
TUS_DISK=r2
TUS_TRANSFER_EXPIRY_DAYS=7
TUS_CACHE_STORE=redis

# Cache Configuration
CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration (for background processing)
QUEUE_CONNECTION=redis

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Mail Configuration (optional for notifications)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="${APP_NAME}"

# File Upload Limits
UPLOADS_MAX_SIZE=2147483648
UPLOADS_CHUNK_SIZE=268435456
UPLOADS_BLOCKED_EXTENSIONS=exe,bat,cmd,com,pif,scr,vbs,js

# Transfer Settings
DEFAULT_TRANSFER_EXPIRY_DAYS=7
MAX_TRANSFER_SIZE=5368709120
MAX_FILES_PER_TRANSFER=100

# Security Settings
ENABLE_VIRUS_SCANNING=false
VIRUS_SCANNER_API_KEY=

# Rate Limiting
THROTTLE_UPLOADS_PER_HOUR=50
THROTTLE_DOWNLOADS_PER_HOUR=200

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
